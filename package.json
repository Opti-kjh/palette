{
  "name": "palette",
  "version": "1.0.0",
  "description": "MCP server for converting Figma designs to React/Vue components using existing design system",
  "main": "dist/index.js",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:services": "tsx src/test.ts",
    "test:figma-tools": "tsx src/test-figma-tools.ts",
    "test:mcp-servers": "tsx src/test-mcp-servers.ts",
    "mcp": "node dist/index.js",
    "mcp:dev": "tsx src/index.ts",
    "postinstall": "yarn build",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "design-system",
    "figma",
    "react",
    "vue",
    "cursor",
    "ai",
    "code-generation",
    "component-library"
  ],
  "author": {
    "name": "KJH",
    "email": "kjh@deali.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Opti-kjh/palatte.git"
  },
  "homepage": "https://github.com/Opti-kjh/palatte#readme",
  "bugs": {
    "url": "https://github.com/Opti-kjh/palatte/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dealicious/design-system": "https://github.com/dealicious-inc/ssm-web.git#master",
    "@dealicious/design-system-react": "https://github.com/dealicious-inc/ssm-web.git#master",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "puppeteer": "^21.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "jest": "^29.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
